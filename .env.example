# Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url_here
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Places API Configuration (for Reviews)
REACT_APP_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
REACT_APP_GOOGLE_PLACE_ID=your_google_place_id_here

# Google Analytics 4 (for Analytics Dashboard)
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# GA4 Data API (admin dashboard numbers) - set in Netlify only
GA_PROPERTY_ID=123456789
# Option A: full service account JSON (stringify the JSON and set as one variable)
# GA_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com",...}
# Option B: client email + private key (private key: use \n for newlines in Netlify UI)
GA_CLIENT_EMAIL=
GA_PRIVATE_KEY=

# Resend Email API (for Email Notifications)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@angelswalking.com
GLADYS_EMAIL=gladys@angelswalking.com

# Test Email (optional - use for testing, leave empty for production)
TEST_EMAIL=

# Netlify Functions URL (optional - defaults to current domain)
REACT_APP_NETLIFY_FUNCTIONS_URL=

# Google Gemini API (for Self-Care Quiz - future)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here
